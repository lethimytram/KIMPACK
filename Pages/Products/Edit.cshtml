@page
@model KIMPACK.Pages.Products.EditModel
@{
    ViewData["Title"] = "Sửa thông tin sản phẩm";
}

<h2 class="text-center mb-3">Sửa thông tin sản phẩm</h2>

<form method="post">
    <!-- Hiển thị Mã sản phẩm nhưng không cho phép sửa -->
    <div class="form-group">
        <label for="MaSP">Mã sản phẩm</label>
        <input asp-for="MaSP" class="form-control" readonly />
        <span asp-validation-for="MaSP" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="TenSP">Tên sản phẩm</label>
        <input asp-for="TenSP" class="form-control" />
        <span asp-validation-for="TenSP" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DonViTinh">Đơn vị tính</label>
        <input asp-for="DonViTinh" class="form-control" />
        <span asp-validation-for="DonViTinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DonGia">Đơn giá</label>
        <input asp-for="DonGia" class="form-control" />
        <span asp-validation-for="DonGia" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật thông tin</button>
    <a href="/Products/Index" class="btn btn-secondary">Quay lại</a>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info mt-3">@Model.Message</div>
}
